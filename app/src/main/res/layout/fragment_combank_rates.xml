<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen9img"
    android:orientation="vertical"
    tools:context=".CombankRatesFragment">


    <TextView
        android:id="@+id/combankRatesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Rates"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/combankRatesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_below="@id/combankRatesTitle"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Per Annum (P.A.) means, \nonce per year"
        android:textColor="@color/blue"
        android:textSize="15sp" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/combankSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/combankRatesText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_edit"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/combankRatesText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="60dp"
        card_view:srcCompat="@drawable/baseline_arrow_drop_down_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/combankSpinner"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/combankRatesImage"
                android:layout_width="wrap_content"
                android:layout_height="850dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>